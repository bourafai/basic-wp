{
    "name": "wpscholar/wp-skeleton",
    "description": "Setup a new WordPress installation via Composer.",
    "license": "GPL-2.0+",
    "type": "project",
    "keywords": [
        "WordPress",
        "skeleton",
        "CMS",
        "blog",
        "composer",
        "wpackagist"
    ],
    "authors": [
        {
            "name": "Micah Wood",
            "email": "micah@wpscholar.com",
            "homepage": "http://wpscholar.com",
            "role": "Developer"
        },
        {
            "name": "Aymene Bourafai",
            "email": "bourafai.a@gmail.com",
            "homepage": "http://aymenebourafai.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/wpscholar/wp-skeleton",
        "issues": "https://github.com/wpscholar/wp-skeleton/issues"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "beapi/wp-mu-loader": "*@stable",
        "bea/autoload": "*@stable",
        "bea/sanitize-filename": "*@stable",
        "bea/disable-xmlrpc": "*@stable",
        "composer/installers": "*@stable",
        "roots/wordpress": "*@stable",
        "roots/wp-password-bcrypt": "*@stable"
    },
    "require-dev": {
        "wpackagist-plugin/advanced-custom-fields":"5.8.11",
        "beapi/composer-scaffold-theme": "dev-master",
        "wpackagist-plugin/debug": "*@stable",
        "wpackagist-plugin/debug-bar": "*@stable",
        "wpackagist-plugin/debug-bar-extender": "*@stable",
        "wpackagist-plugin/debug-bar-actions-and-filters-addon": "*@stable",
        "wpackagist-plugin/debug-bar-cache-lookup": "*@stable",
        "wpackagist-plugin/debug-bar-cron": "*@stable",
        "wpackagist-plugin/debug-bar-list-dependencies": "*@stable",
        "wpackagist-plugin/debug-bar-shortcodes": "*@stable",
        "wpackagist-plugin/debug-bar-slow-actions": "*@stable",
        "wpackagist-plugin/rewrite-rules-inspector": "*@stable",
        "wpackagist-plugin/wp-email-debug": "*@stable",
        "wpackagist-theme/twentynineteen":"1.5",
        "rarst/laps": "*@stable"
    },
    "suggest": {
        "wp-cli/wp-cli": "*@stable"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "content/plugins/{$name}": [
                "type:wordpress-plugin"
            ],
            "content/themes/{$name}": [
                "type:wordpress-theme"
            ],
            "content/mu-plugins/{$name}": [
                "type:wordpress-muplugin"
            ]
        }
    },
    "scripts": {
        "generate-salts": [
            "echo '<?php' > salt.php && curl -L https://api.wordpress.org/secret-key/1.1/salt/ >> salt.php"
        ],
        "move-mu-loader": [
            "mv content/mu-plugins/mu-loader/mu-require.php content/mu-plugins/"
        ],
        "post-create-project-cmd": [
            "@composer run move-mu-loader",
            "@composer run generate-salts"
        ]
    },
    "autoload": {
        "psr-4": {
            "BEA\\ComposerInstaller\\": "bin/",
            "AB\\Posts_Render\\": "content/plugins/ab-posts-render/classes/"
        },
        "files": [
            "wp-config-local.php"
        ]
    }
}
